{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "uv@latest",
    "python313@latest"
  ],
  "env": {},
  "shell": {
    "init_hook": [
      ". $VENV_DIR/bin/activate",
      "echo Running uv sync...",
      "uv sync"
    ],
    "scripts": {
      "server": [
        "django run server"
      ],
      "test": [
        "django run test"
      ],
      "db": [
        "django migrate"
      ],
      "test-dockerignore": [
	"rsync -avn . /dev/shm --exclude-from .dockerignore"
      ]
    }
  }
}
